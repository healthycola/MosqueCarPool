extends layout

block content
  h1= title
  p Welcome to #{title}
  form(
    name="adduser", 
            method="post", 
            action="adduser"
  )
    .form-group
      label Name
      input#name.form-control(type='text', name='name')
      label Username
      input#username.form-control(type='text', name='username')
      label Lat
      input#lat.form-control(type='text', name='lat')
      label Long
      input#long.form-control(type='text', name='long')
      button.btn.btn-default(type='submit') Submit
